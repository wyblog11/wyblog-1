.post-reward
  .reward-button
    i.fas.fa-qrcode
    = ' ' + _p('donate')
  .reward-main
    ul.reward-all
      each item in theme.reward.QR_code
        - var clickTo = item.link ? item.link : item.img
        li.reward-item
          a(href=url_for(clickTo) target='_blank')
            img.post-qr-code-img(src=url_for(item.img) alt=item.text)
          .post-qr-code-desc=item.text
#orlike-box.orlike-box
  script.
    (() => {
      function loadOrLike () {
        new OrLike({
          serverUrl: "你的api",
          el: ".orlike-box",
          days: 30,
        });
      }
      window.pjax ? loadOrLike() : window.addEventListener('load', loadOrLike)
    })()
